<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_input_height"
        android:background="@drawable/base_select_btn_light_gray_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_choose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/iv_choose"
            android:gravity="center_vertical"
            android:text="请选择" />

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="@dimen/dimen_input_height"
            android:layout_height="@dimen/dimen_input_height"
            android:layout_alignParentEnd="true"
            android:background="#9f30" />

    </RelativeLayout>

</LinearLayout>