<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--PopupWindow进入退出动画-->
    <style name="BasePopupWindow">
        <item name="android:windowEnterAnimation">@anim/base_popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/base_popup_window_exit</item>
    </style>

    <style name="TimePickerDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/picker_bg</item>
    </style>

    <!--主界面每个按钮style-->
    <style name="ChooseActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onClick</item>
    </style>

</resources>
